import java.util.ArrayList;

public class Hand {
	
	Object[] myHand;
	private int handSize;
	
	public Hand(int amount){
		myHand = new Object[amount];
		handSize = 0;
	}
	
	public void addCard(Object newCard){
		myHand[handSize++] = newCard;
	}
	
	public int handSize(){
		return handSize;
	}
	
	public int resetHand(){
		handSize = 0;
		return handSize;
	}
	
}
